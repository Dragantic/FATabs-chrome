{
	"manifest_version": 3,
	"name": "FATabs",
	"version": "1.19",
	"description": "Batch-download images from open FurAffinity view tabs",
	"homepage_url": "https://github.com/dragantic/fatabs-chrome",

	"icons": {
		"32": "images/icon-32.png",
		"48": "images/icon-48.png"
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"action": {
		"browser_style": true,
		"default_title": "FATabs",
		"default_popup": "popup.html",
		"default_icon": "images/icon-32.png"
	},
	"web_accessible_resources": [{
		"resources": ["images/download.png"],
		"matches": ["<all_urls>"]
	 }],
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["js/content.js"],
		"css": ["content.css"]
	}],
	"permissions": [
		"tabs",
		"downloads",
		"scripting"
	],
	"host_permissions": [
		"*://*.furaffinity.net/view/*"
	]
}
